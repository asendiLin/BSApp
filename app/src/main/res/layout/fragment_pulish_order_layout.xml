<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#eaeaea"
              android:orientation="vertical"
              android:paddingTop="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/txt_public_phone"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:inputType="number"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#939292"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/txt_public_pay"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_pay"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#939292"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/txt_public_endTime"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_timepicker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/txt_public_time"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#939292"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="@string/txt_public_type"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_order_type1"
                    style="@style/OrderTypeStyle"
                    android:text="跑腿"
                    />
                <TextView
                    android:id="@+id/tv_order_type2"
                    style="@style/OrderTypeStyle"
                    android:text="代拿"
                    />
                <TextView
                    android:id="@+id/tv_order_type3"
                    style="@style/OrderTypeStyle"
                    android:text="拼车"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                >
                <TextView
                    android:id="@+id/tv_order_type4"
                    style="@style/OrderTypeStyle"
                    android:text="互换"
                    />
                <TextView
                    android:id="@+id/tv_order_type5"
                    style="@style/OrderTypeStyle"
                    android:text="顺风车"
                    />
                <TextView
                    android:id="@+id/tv_order_type6"
                    style="@style/OrderTypeStyle"
                    android:text="陪伴"
                    />
                <TextView
                    android:id="@+id/tv_order_type7"
                    style="@style/OrderTypeStyle"
                    android:text="其他"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--<Spinner-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_weight="2"-->
            <!--android:spinnerMode="dropdown">-->
        <!--</Spinner>-->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#939292"
        />
    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:maxLines="5"
        android:background="@android:color/transparent"
        android:hint="需求详情......"
        android:gravity="left|top"
        />
</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:clickable="true"
        app:backgroundTint="@color/colorTheme"
        app:fabSize="normal"
        android:src="@mipmap/ic_post_order"
        android:scaleType="center"
        />
</LinearLayout>